import java.util.*;

public class Samsung_tv implements Tv {
    // 필드 부분
    private int channel_number; // 변경된 체널 값을 저장할 변수
    private int power;

    // 메서드 부분
    @Override
    public void TV_ON() {
        power = true;
    }

    @Override
    public void TV_OFF() {
        power = false;
    }

    @Override
    public int check_channel() {
        return channel_change();
    }

    @Override
    public int channel_change() {
        if(TV_)
        Scanner scan = new Scanner(System.in);
        System.out.println("몇 번으로 변경을 하실껀가요?");
        while (true) {
            int channel_number = scan.nextInt();
            if(channel_number < 0)
                System.out.println("다시 입력하여 주십시오");
            else break;
        }
        return channel_number;
    }

}
